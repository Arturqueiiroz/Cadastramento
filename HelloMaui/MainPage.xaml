<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMaui.MainPage"
             Title="Tela de cadastro">
    <ScrollView>
        <Grid> <!-- Grid é um layout que organiza elementos em linhas e colunas -->
            <Grid.RowDefinitions><!-- Define as linhas da Grid -->
                <RowDefinition Height="400"/><!-- Primeira linha com altura fixa de 400 unidades -->
                <RowDefinition Height="*"/> <!-- Segunda linha ocupa o espaço restante da tela (*) -->
                <RowDefinition Height="100"/> <!-- Terceira linha com altura fixa de 100 unidades -->
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="dotnet_bot.png" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Faça o seu cadastro" FontAttributes="Bold" FontSize="18"/>
            </StackLayout>
            <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                <StackLayout WidthRequest="320">
                    <Label Text="Nome completo"/>
                    <Entry x:Name="NomeCompleto" Keyboard="Text" Placeholder="Nome Completo" Margin="0,10,0,0"/>
                </StackLayout>
                <StackLayout WidthRequest="320" Margin="0,20,0,0">
                    <Label Text="Data de Nascimento"/>
                    <DatePicker x:Name="DataNascimento" Format="dd/mm/yyyy"/>
                </StackLayout>
                <StackLayout WidthRequest="320" Margin="0,20,0,0">
                    <Label Text="Gênero"/>
                    <Picker x:Name="Genero" Margin="0,10,0,0">
                        <Picker.Items>
                            <x:String>Masculinho</x:String>
                            <x:String>Feminino</x:String>
                            <x:String>Prefiro não declarar</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
                <StackLayout  WidthRequest="320" Margin="0,20,0,0">
                    <Label Text="Idade"/>
                    <Entry x:Name="Idade" Keyboard="Numeric" Placeholder="Idade"  Margin="0,10,0,0"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Grid.Row="2" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,20,0,0">
                <Button x:Name="Cadastrar" Text="Cadastrar"></Button>
            </StackLayout>
            
            
            
        </Grid>
    </ScrollView>

</ContentPage>
